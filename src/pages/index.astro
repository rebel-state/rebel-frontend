---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Rebel-State — Engineering the Future of Intelligence',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[{ text: 'Learn more', href: '#features' }]}
    image={{ src: '~/assets/images/do-something-great.jpg', alt: 'Do Something Great' }}
  >
    <Fragment slot="title"> Engineering the Future of Intelligence </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Our mission is to dismantle inefficiency. We empower organizations to reclaim their time and scale their impact
        by providing the most sophisticated technical tools and knowledge available. At Rebel-State, we don't just
        follow the future—we build it.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Rebel-State: Knowledge is Power.</span>
      We dismantle inefficiency by providing the sophisticated tools and knowledge organizations need to scale their impact.
      At Rebel-State, we don't just follow the future—we build it.
    </Fragment>
  </Hero>

  <!-- Services Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="Rebel-State — Engineering the Future of Intelligence"
    subtitle={`Rebel-State is a premier technical collective that empowers organizations with custom tooling, business intelligence & AI integration, autonomous agents, model training, content generation, and educational tooling.`}
    items={[
      {
        title: 'Custom Tooling & Automation',
        description:
          'Eliminate operational friction with bespoke middleware, dashboards, and high-performance apps that automate manual, error-prone processes and scale with your business.',
        icon: 'tabler:settings',
        callToAction: { href: '/services/custom-tooling-automation', text: 'Learn more' },
      },
      {
        title: 'Business Intelligence & AI Integration',
        description:
          'Transform fragmented data into a real-time System of Intelligence—predictive models, unified dashboards, and ETL pipelines that surface actionable insights.',
        icon: 'tabler:chart-infographic',
        callToAction: { href: '/services/business-intelligence-ai-integration', text: 'Learn more' },
      },
      {
        title: 'Custom Agents & Autonomous Workflows',
        description:
          'Deploy agentic workflows that reason, plan, and execute multi-step tasks autonomously while providing human-in-the-loop controls for oversight and safety.',
        icon: 'tabler:robot',
        callToAction: { href: '/services/custom-agents-autonomous-workflows', text: 'Learn more' },
      },
      {
        title: 'Model Training & Specialized AI',
        description:
          'Fine-tune and optimize models for vertical expertise using techniques like LoRA/QLoRA and RAG, deployed in private or VPC-hosted environments for data sovereignty.',
        icon: 'tabler:brain',
        callToAction: { href: '/services/model-training-specialized-ai', text: 'Learn more' },
      },
      {
        title: 'Content Generation',
        description:
          'Programmatic, brand-aligned content engines that produce high-fidelity, multi-channel content (docs, posts, emails) from curated knowledge bases and real-time data.',
        icon: 'tabler:writing',
        callToAction: { href: '/services/content-generation', text: 'Learn more' },
      },
      {
        title: 'Educational Content & Tools',
        description:
          'Interactive courses, project-based learning, and corporate training built from your real data to accelerate adoption and upskill teams in privacy-first, production-ready practices.',
        icon: 'tabler:book',
        callToAction: { href: '/services/educational-content-tools', text: 'Learn more' },
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore the Proton Ecosystem"
    subtitle="Discover a range of privacy-focused products that work together to give you back control of your digital life."
    tagline="Products"
    items={[
      {
        title: 'Proton Mail',
        description: 'Secure, end-to-end encrypted email that protects your conversations from prying eyes.',
        icon: 'tabler:mail-filled',
        callToAction: { href: '/products/proton-mail', text: 'Learn more' },
      },
      {
        title: 'Proton VPN',
        description: 'A high-speed, secure VPN that unblocks content and keeps your online activity private.',
        icon: 'tabler:shield-check',
        callToAction: { href: '/products/proton-vpn', text: 'Learn more' },
      },
      {
        title: 'Proton Drive',
        description: 'End-to-end encrypted cloud storage for your files, ensuring only you can access your data.',
        icon: 'tabler:cloud-lock',
        callToAction: { href: '/products/proton-drive', text: 'Learn more' },
      },
      {
        title: 'Proton Pass',
        description: 'A secure password manager and identity vault that protects your digital identity.',
        icon: 'tabler:key',
        callToAction: { href: '/products/proton-pass', text: 'Learn more' },
      },
      {
        title: 'Proton Authenticator',
        description: 'A two-factor authentication app to add a strong layer of security to your online accounts.',
        icon: 'tabler:device-mobile-code',
        callToAction: { href: '/products/proton-authenticator', text: 'Learn more' },
      },
      {
        title: 'Proton for Business',
        description: 'An all-in-one, privacy-first ecosystem for your organization, including email, VPN, and more.',
        icon: 'tabler:shield-check',
        callToAction: { href: '/products/proton-for-business', text: 'Learn more' },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`The blog is used to display AstroWind documentation.
                        Each new article will be an important step that you will need to know to be an expert in creating a website using Astro + Tailwind CSS.
                        Astro is a very interesting technology. Thanks.
                `}
  />
</Layout>
