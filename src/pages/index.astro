---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import HeroAnimated from '~/components/widgets/HeroAnimated.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Rebel-State — Engineering the Future of Intelligence',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget (animated) ******************* -->

  <HeroAnimated
    tagline=""
    title="Engineering the Future of Intelligence"
    subtitle={`Our mission is to dismantle inefficiency. We empower organizations to reclaim their time and scale their impact by providing the most sophisticated technical tools and knowledge available. At Rebel-State, we don't just follow the future—we build it.`}
    image={{ src: '~/assets/images/rebel-state-logo.svg', alt: 'Rebel-State' }}
    height={640}
  />

  <!-- Services Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="rebel-state — Engineering the Future of Intelligence"
    subtitle={`rebel-state is a premier technical collective that empowers organizations with custom tooling, business intelligence & AI integration, autonomous agents, model training, content generation, and educational tooling.`}
    items={[
      {
        title: 'Custom Tooling & Automation',
        description:
          'Eliminate operational friction with bespoke middleware, dashboards, and high-performance apps that automate manual, error-prone processes and scale with your business.',
        icon: 'tabler:settings',
  callToAction: { href: '/services/custom-tooling-automation', text: 'Learn more' },
      },
      {
        title: 'Business Intelligence & AI Integration',
        description:
          'Transform fragmented data into a real-time System of Intelligence—predictive models, unified dashboards, and ETL pipelines that surface actionable insights.',
        icon: 'tabler:chart-infographic',
  callToAction: { href: '/services/business-intelligence-ai-integration', text: 'Learn more' },
      },
      {
        title: 'Custom Agents & Autonomous Workflows',
        description:
          'Deploy agentic workflows that reason, plan, and execute multi-step tasks autonomously while providing human-in-the-loop controls for oversight and safety.',
        icon: 'tabler:robot',
  callToAction: { href: '/services/custom-agents-autonomous-workflows', text: 'Learn more' },
      },
      {
        title: 'Model Training & Specialized AI',
        description:
          'Fine-tune and optimize models for vertical expertise using techniques like LoRA/QLoRA and RAG, deployed in private or VPC-hosted environments for data sovereignty.',
        icon: 'tabler:brain',
  callToAction: { href: '/services/model-training-specialized-ai', text: 'Learn more' },
      },
      {
        title: 'Content Generation',
        description:
          "Programmatic, brand-aligned content engines that produce high-fidelity, multi-channel content (docs, posts, emails) from curated knowledge bases and real-time data.",
        icon: 'tabler:writing',
  callToAction: { href: '/services/content-generation', text: 'Learn more' },
      },
      {
        title: 'Educational Content & Tools',
        description:
          'Interactive courses, project-based learning, and corporate training built from your real data to accelerate adoption and upskill teams in privacy-first, production-ready practices.',
        icon: 'tabler:book',
  callToAction: { href: '/services/educational-content-tools', text: 'Learn more' },
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Most used widgets"
    subtitle="Provides frequently used components for building websites using Tailwind CSS"
    tagline="Components"
    items={[
      {
        title: 'Headers',
        description: "Ever tried driving without GPS? Boom! That's why websites need headers for direction.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Heros',
        description:
          "Picture a superhero landing – epic, right? That's the job of a Hero section, making grand entrances!",
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Features',
        description:
          'Where websites strut their stuff and show off superpowers. No holding back on the bragging rights here!',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Content',
        description:
          "Dive into the meat and potatoes of a site; without it, you'd just be window shopping. Content is king.",
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Call-to-Action',
        description:
          'That enthusiastic friend who\'s always urging, "Do it! Do it!"? Yeah, that\'s this button nudging you towards adventure.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Pricing',
        description: 'Behold the dessert menu of the website world. Tempting choices await, can you resist?',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Testimonial',
        description: 'Step into the gossip corner! Here, other visitors spill the beans and share the juicy details.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Contact',
        description:
          'Like a digital mailbox, but faster! Drop a line, ask a question, or send a virtual high-five. Ding! Message in.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Footers',
        description: "The footer's like the credits of a movie but sprinkled with easter eggs. Time to hunt!",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`The blog is used to display AstroWind documentation.
                        Each new article will be an important step that you will need to know to be an expert in creating a website using Astro + Tailwind CSS.
                        Astro is a very interesting technology. Thanks.
                `}
  />
</Layout>
