---
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About — rebel-state',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="About"
    title="Technical collective building practical, privacy-first AI & tooling"
    image={{ src: '~/assets/images/team.jpg', alt: 'Rebel-State team' }}
  >
    <Fragment slot="subtitle">
      rebel-state empowers organizations through custom tooling, deep business intelligence, autonomous workflows, and specialized model training — all built with data sovereignty and long-term maintainability in mind.
    </Fragment>
  </Hero>

  <Content
    isReversed
    tagline="Executive summary"
    title="We build the systems you actually need"
    items={[
      {
        title: 'Custom Tooling & Automation',
        description: `We replace manual "glue work" with bespoke middleware and high-performance apps so teams can focus on strategy, not repetition.`,
      },
      {
        title: 'Business Intelligence & AI',
        description: `We turn fragmented data into a single source of truth and embed predictive AI into decision workflows.`,
      },
      {
        title: 'Agents & Autonomous Workflows',
        description: `We design agentic systems that execute multi-step tasks autonomously while preserving human oversight where needed.`,
      },
    ]}
  >
    <Fragment slot="content">
      <p class="prose">rebel-state was founded by engineers, data scientists and strategists who rejected one-size-fits-all software. We focus on transparent, maintainable systems that put data sovereignty and operational leverage first.</p>
    </Fragment>
  </Content>

  <Features2
    title="Our approach"
    subtitle="Practical, privacy-first, and built for scale"
    columns={3}
    items={[
      { title: 'Operational Sovereignty', description: 'Software should adapt to your business, not the other way around.', icon: 'tabler:shield-check' },
      { title: 'Craftsman Engineering', description: 'Lean, documented code and models built to endure.', icon: 'tabler:code' },
      { title: 'Education & Empowerment', description: 'Training and docs that make teams self-sufficient.', icon: 'tabler:book' },
    ]}
  />
</Layout>
