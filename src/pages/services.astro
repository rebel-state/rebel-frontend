---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    tagline="Services"
    title="We build tailored systems and AI that scale"
    subtitle="rebel-state designs custom tooling, data & AI systems, autonomous agents, and education for organizations seeking operational sovereignty and technical leverage."
    actions={[{ variant: 'primary', text: 'Contact us', href: '/contact' }]}
    image={{ src: '~/assets/images/do-something-great.jpg', alt: 'Do Something Great' }}
  />

  <!-- Services list (features) -->
  <Features
    id="services-list"
    tagline="What we do"
    title="Services built for operational sovereignty"
    subtitle={`Custom tooling, AI-integrated business intelligence, autonomous agents, specialized model training, content engines, and educational tooling.`}
    items={[
      {
        title: 'Custom Tooling & Automation',
        description: `We audit your stack, remove manual "glue work," and build bespoke middleware, dashboards, and apps that automate tedious workflows and scale with your business.`,
        icon: 'tabler:settings',
        callToAction: { href: '/services/custom-tooling-automation', text: 'Learn more' },
      },
      {
        title: 'Business Intelligence & AI Integration',
        description: `Turn fragmented data into a living System of Intelligence: predictive models, unified dashboards, and ETL to power proactive decisions.`,
        icon: 'tabler:chart-infographic',
        callToAction: { href: '/services/business-intelligence-ai-integration', text: 'Learn more' },
      },
      {
        title: 'Custom Agents & Autonomous Workflows',
        description: `Agentic workflows automate complex, multi-step processes while preserving human oversight via HITL protocols.`,
        icon: 'tabler:robot',
        callToAction: { href: '/services/custom-agents-autonomous-workflows', text: 'Learn more' },
      },
      {
        title: 'Model Training & Specialized AI',
        description: `We fine-tune and deploy vertical models using LoRA / QLoRA and RAG, hosted privately to preserve data sovereignty and reduce hallucinations.`,
        icon: 'tabler:brain',
        callToAction: { href: '/services/model-training-specialized-ai', text: 'Learn more' },
      },
      {
        title: 'Content Generation',
        description: `Programmatic content engines that produce brand-aligned, high-fidelity assets across channels from a curated knowledge base.`,
        icon: 'tabler:writing',
        callToAction: { href: '/services/content-generation', text: 'Learn more' },
      },
      {
        title: 'Educational Content & Tools',
        description: `Project-based courses and corporate training built from your real data to accelerate adoption and upskill teams.`,
        icon: 'tabler:book',
        callToAction: { href: '/services/educational-content-tools', text: 'Learn more' },
      },
    ]}
  />

  <CallToAction
    actions={[{ variant: 'primary', text: 'Get in touch', href: '/contact' }]}
    title="Ready to build a system that scales?"
    subtitle="Contact us to discuss a custom plan â€” from audits to deployed models and training programs."
  />
</Layout>
