<Layout metadata={metadata}>
  <Hero
    tagline="Services"
    title="Educational Content & Tools"
    subtitle="Project-based training and corporate courses that turn your project history into actionable learning paths."
    actions={[{ text: 'Contact us', href: '/contact', variant: 'primary' }]}
